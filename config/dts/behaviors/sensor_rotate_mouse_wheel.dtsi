#include "dt-bindings/zmk/mouse.h"

/ {
	behaviors {
		/omit-if-no-ref/ mw: behavior_sensor_rotate_mouse_wheel {
			compatible = "zmk,behavior-sensor-rotate-mouse-wheel";
			label = "ENC_MOUSE_WHEEL";
			#sensor-binding-cells = <2>;
		};

		/omit-if-no-ref/ inc_dec_mwh: behavior_sensor_rotate_mouse_wheel_horizontal {
			compatible = "zmk,behavior-sensor-rotate-mouse-wheel";
			label = "ENC_MOUSE_WHEEL";
			#sensor-binding-cells = <2>;
			bindings = <&mwh>, <&mwh>;
		};
	};
};

&mwh {
    delay-ms = <U_MOUSE_SCROLL_DELAY>;
    acceleration-exponent = <U_MOUSE_SCROLL_EXPONENT>;
    time-to-max-speed-ms = <U_MOUSE_SCROLL_TIME>;
};
